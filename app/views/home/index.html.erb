<div class="container">
<h1> Welcome to Tempbook! </h1>

<% if !user_signed_in? %>

<div class="signinform" style="float:left; width: 300px;">
    <%= form_for(:user, :url => session_path(:user), class: "form-signin") do |f| %>
      <h4 class="form-signin-heading" style="color:white;">Sign in</h4>
        <%= f.text_field :email, class: "form-control", placeholder:"Email address"  %>
        <label for="inputPassword" class="sr-only"></label>
        <%= f.password_field :password, class: "form-control", placeholder: "Password" %>
        <%= f.submit 'Sign in', class: "btn btn-lg btn-primary btn-block" %>
      <div class="password" style="color:white;" <%= link_to "Forgot your password?", new_password_path(:user) %></div>
      <% end %>
    </div>

    <div class="registerform" style="float:right; width: 300px;">
      <div class="row">
          <%= form_for(:user, :url => registration_path(:user), class:"form-register") do |f| %>
          <h4 class="form-register-heading" style="color:white;">Register</h4>
              <label for="inputEmail" class="sr-only"></label>
                <%= f.email_field :email,  class:"form-control", placeholder:"Email address" %>

              <label for="inputPassword" class="sr-only"></label>
                <%= f.password_field :password, class:"form-control", placeholder:"Password" %>

              <label for="inputPassword" class="sr-only"></label>
                <%= f.password_field :password_confirmation, class:"form-control", placeholder:"Enter password again"  %>

                <%= f.submit "Register now!",  class:"btn btn-lg btn-primary btn-block" %>
            <% end %>
        <% end %>
  </div>
</div>
<p style="color: white;">Get a social life now! Don't like your current friends? Replace them!</P>


<% if user_signed_in? %>
<div class="homebuttons">
<button onclick="location.href='/user/profile'" class="navbutton" style="height:100px; width:400px; font-size:50px; background-color: white;">Your profile</button>
<button onclick="location.href='/posts'" class="navbutton" style="height:100px; width:400px; font-size:50px;">Start</button>
</div>
        <% end %>
      </div>
    </div>
  </div>
</div>
